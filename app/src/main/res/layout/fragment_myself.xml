                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mine_mission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin"
                    android:src="@mipmap/mission" />

                <TextView
                    android:layout_width="wrap_content"
